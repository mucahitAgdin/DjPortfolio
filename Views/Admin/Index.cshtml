@model List<YourProject.Controllers.AdminController.Song>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <!-- Şarkı Yükleme Formu -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title mb-4">Yeni Şarkı Yükle</h3>
                    <form asp-action="UploadSong" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="SongName" class="form-label">Şarkı Adı</label>
                            <input type="text" class="form-control" id="SongName" name="SongName" required>
                        </div>
                        <div class="mb-3">
                            <label for="SongFile" class="form-label">Dosya Seç</label>
                            <input type="file" class="form-control" id="SongFile" name="SongFile" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Yükle</button>
                    </form>
                </div>
            </div>
        </div>

        <li><a href="/Admin/AddEvent">Yeni Etkinlik Ekle</a></li>
        <li><a href="/Admin/ManageEvents">Etkinlikleri Yönet</a></li>

        <!-- Şarkı Listesi -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title mb-4">Yüklenen Şarkılar</h3>
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped">
                                <thead class="table-dark">
                                    <tr>
                                        <th>#</th>
                                        <th>Ad</th>
                                        <th>Dosya</th>
                                        <th>Sil</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var song in Model)
                                    {
                                        <tr>
                                            <td>@song.Id</td>
                                            <td>@song.Title</td>
                                            <td>
                                                <a href="@song.path" target="_blank">Dinle</a>
                                            </td>
                                            <td>
                                                <form method="post" asp-action="DeleteSong">
                                                    <input type="hidden" name="id" value="@song.Id" />
                                                    <button class="btn btn-sm btn-danger" type="submit">Sil</button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p>Henüz şarkı eklenmemiş.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
