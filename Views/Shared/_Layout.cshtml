<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - DJ Portfolio</title>
    <link rel="stylesheet" href="~/css/site.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <header>
        <div class="Logo">
            <img src="/media/brg.png" alt="logo" asp-append-version="true">
        </div>
        <nav>
        </nav>
    </header>
    <main>
        <!-- GIF Görseli -->
        <div id="gif-container"></div>
        <!-- Sayfa İçeriği -->
        @RenderBody()
    </main>
    <footer>
        <!-- Müzik Kontrolleri -->
        <div class="music-controls">
            <button id="prev"><i class="fa fa-backward"></i></button>
            <button id="play-pause"><i class="fa fa-play"></i></button>
            <button id="next"><i class="fa fa-forward"></i></button>

            <div class="time-bar">
                <input type="range" id="seek-bar" min="0" max="0" value="0">
                <span id="current-time">0:00</span> / <span id="total-time">0:00</span>
            </div>
        </div>

        <!-- Sosyal Medya İkonları -->
        <div class="social-media">
            <a href="https://www.instagram.com/hangezmis/" class="instagram" target="_blank">
                <i class="fa-brands fa-instagram"></i>
            </a>
            <a href="https://open.spotify.com/user/bugrahan.brg11?si=8b151ed21b1d48ed" class="spotify" target="_blank">
                <i class="fa-brands fa-spotify"></i>
            </a>
            <a href="mailto:sendtohangezmis@gmail.com" class="mail">
                <i class="fa-solid fa-envelope"></i>
            </a>
        </div>

        <!-- Sidebar -->
        <div id="event-sidebar">
            <div id="events-list"></div>
        </div>

        <!-- Rights Bölümü - Sol Alt Köşe -->
        <div class="rights">
            <p>© 2025 DJ Hangezmiş. All rights reserved.</p>
        </div>
    </footer>

    <script src="~/js/site.js"></script>
</body>
</html>
