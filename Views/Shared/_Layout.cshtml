<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - DJ Portfolio</title>
    <link rel="stylesheet" href="~/css/site.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <header>
        <div class="Logo">
            <img src="/media/brg.png" alt="logo" asp-append-version="true">
        </div>
        <nav>
            <a href="/">Home</a>
            <a href="/About">About</a>
        </nav>
    </header>
    <main>
        <div class="image-gallery" id="imageGallery"></div>
        <div id="loading">Loading images...</div>
    </main>

    <main>
        @RenderBody()
    </main>
    <footer>
        <!-- Müzik Kontrolleri -->
        <div class="music-controls">
            <button id="prev"><i class="fa fa-backward"></i></button>
            <button id="play-pause"><i class="fa fa-play"></i></button>
            <button id="next"><i class="fa fa-forward"></i></button>
        </div>
        <!-- Sosyal Medya İkonları -->
        <div class="social-media">
            <a href="https://www.instagram.com/hangezmis/" class="instagram" target="_blank">
                <i class="fa-brands fa-instagram"></i>
            </a>
            <a href="https://www.twitter.com" class="twitter" target="_blank">
                <i class="fa-brands fa-twitter"></i>
            </a>
            <a href="mailto:example@gmail.com" class="mail">
                <i class="fa-solid fa-envelope"></i>
            </a>
        </div>

    </footer>

    <script src="~/js/site.js"></script>
</body>
</html>
